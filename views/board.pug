extends layout

block content
  h1= title
  p parameters
  if query
    p rows= #{query.rows}, cols= #{query.cols}
  
  - const rows = Number(query.rows);
  - const cols = Number(query.cols);

  
  if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p The  values for rows and cols are not valid.

  else if (rows < 1 || rows > 10)
    p Number of rows is out of the  range (1 to 10).

  else if (cols < 1 || cols > 10)
    p Number of columns is out of the  range (1 to 10).

  else
   
    table#outer
      - for (let i = 0; i < rows; i++)
        tr#row
          - for (let j = 0; j < cols; j++)
            - let cellValue = 0;

            - if (i === j)
              - cellValue = 1;
            - else if (i === j + 1)
              - cellValue = 2;
            - else if (i === j - 1)
              - cellValue = i;

            td= cellValue



  


